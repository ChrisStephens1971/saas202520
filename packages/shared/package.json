{
  "name": "@tournament/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types, models, and constants for tournament platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types/scoring": {
      "types": "./dist/types/scoring.d.ts",
      "import": "./dist/types/scoring.js"
    },
    "./types/payment": {
      "types": "./dist/types/payment.d.ts",
      "import": "./dist/types/payment.js"
    },
    "./types/match": {
      "types": "./dist/types/match.d.ts",
      "import": "./dist/types/match.js"
    },
    "./types/tournament": {
      "types": "./dist/types/tournament.d.ts",
      "import": "./dist/types/tournament.js"
    },
    "./types/player": {
      "types": "./dist/types/player.d.ts",
      "import": "./dist/types/player.js"
    },
    "./types/organization": {
      "types": "./dist/types/organization.d.ts",
      "import": "./dist/types/organization.js"
    },
    "./types/user": {
      "types": "./dist/types/user.d.ts",
      "import": "./dist/types/user.js"
    }
  },
  "scripts": {
    "prebuild": "cd ../../ && prisma generate",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "vitest --run --passWithNoTests",
    "test:run": "vitest --run --passWithNoTests"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.24",
    "typescript": "^5.9.3",
    "vitest": "^2.1.5"
  }
}
